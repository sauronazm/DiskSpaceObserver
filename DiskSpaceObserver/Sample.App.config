<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <configSections>
    <section name="DiscsConfiguration" type="DiskSpaceObserver.DiscsConfigurationSection, DiskSpaceObserver" />
  </configSections>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
  </startup>
  <appSettings>
    <add key="MailFromUsername" value="youname"/>
    <add key="MailFromServer" value="gmail.com"/>
    <add key="MailFromPassword" value="*****"/>
    <add key="MailTo" value="recipient1;recipient2"/>
    <add key="MailSubject" value="Disk Space Observer Message. Machine: Manage EC2"/>
    <add key="MailSendAlways" value="yes"/>
    <add key="MailUseSSL" value="yes"/>
    <add key="MailUseHTML" value="yes"/>
  </appSettings>

  <DiscsConfiguration DefaultLimit="1000">
    <Discs>
      <add Letter="c" Limit="1000" />
    </Discs>
  </DiscsConfiguration>

</configuration>