<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <configSections>
    <section name="DiscsConfiguration" type="DiskSpaceObserver.DiscsConfigurationSection, DiskSpaceObserver" />
  </configSections>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
  </startup>
  <appSettings>
    <add key="EmailFromUsername" value="user"/>
    <add key="EmailFromServer" value="gmail.com"/>
    <add key="EmailFromPassword" value="secret"/>
    <add key="EmailTo" value="user@gmail.com;other@mail.com"/>
    <add key="EmailSubject" value="Disk Space Observer Message. Machine: MACHINE NAME"/>
    <add key="SendMailAlways" value="yes"/>
  </appSettings>

  <DiscsConfiguration DefaultLimit="1000">
    <Discs>
      <add Letter="c" Limit="1000" />
    </Discs>
  </DiscsConfiguration>

</configuration>